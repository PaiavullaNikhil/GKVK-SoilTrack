{
  "expo": {
    "name": "SoilTrack",
    "slug": "SoilTrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "icon": "./assets/app-icon.png",
    "splash": {
      "backgroundColor": "#1B5E20"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gkvk.soilapp"
    },
    "android": {
      "package": "com.rishven.soiltrack",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow GKVK App to access your camera for capturing soil health cards."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow GKVK App to access your photos to select soil health card images."
        }
      ],
      "expo-asset",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "SoilTrack",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c6f022f1-fec4-4c21-82f9-02430c6e78bd"
      }
    }
  }
}
